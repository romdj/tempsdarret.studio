# Temps D'arrÃªt Platform Environment Variables
# Copy this file to .env and configure for your environment

# ============================================================================
# Kong Gateway
# ============================================================================
KONG_DB_PASSWORD=kong_password

# ============================================================================
# Email Notifications (Resend.dev)
# ============================================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Verified domain for sending emails (must be verified in Resend dashboard)
# Example: notifications@tempsdarret.studio
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Payload CMS (Notification Service)
# ============================================================================
# Secret key for Payload CMS (generate with: openssl rand -base64 32)
PAYLOAD_SECRET=your_generated_secret_here

# ============================================================================
# MongoDB
# ============================================================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin_password

# ============================================================================
# Redis
# ============================================================================
REDIS_PASSWORD=

# ============================================================================
# Application
# ============================================================================
NODE_ENV=development

# Frontend API endpoint (should point to Kong Gateway)
VITE_API_BASE_URL=http://localhost:8000
PUBLIC_API_BASE_URL=http://localhost:8000
