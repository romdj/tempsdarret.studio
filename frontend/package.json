{
	"name": "@tempsdarret/frontend",
	"private": true,
	"version": "0.1.0",
	"description": "SvelteKit photography portfolio and client portal frontend",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"lint": "eslint .",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@tempsdarret/shared": "workspace:*"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^22.0.0",
		"autoprefixer": "^10.4.0",
		"daisyui": "^4.12.0",
		"eslint": "^9.12.0",
		"postcss": "^8.4.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.2.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.6.2",
		"vite": "^7.0.4",
		"vitest": "^2.0.0",
		"@vitest/coverage-v8": "^2.0.0"
	},
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	}
}
