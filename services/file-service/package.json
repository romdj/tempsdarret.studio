{
  "name": "@tempsdarret/file-service",
  "version": "0.1.0",
  "description": "Large file management, multi-resolution processing, and archive generation service",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/services tests/handlers",
    "test:all": "jest --runInBand",
    "lint": "eslint src/**/*.{js,ts}",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@tempsdarret/events": "workspace:*",
    "fastify": "^4.24.0",
    "@fastify/multipart": "^8.0.0",
    "mongoose": "^8.0.0",
    "archiver": "^7.0.1",
    "sharp": "^0.33.0",
    "ts-exif-parser": "^0.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}