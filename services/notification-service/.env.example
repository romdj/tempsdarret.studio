# Notification Service Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/notification-templates
REDIS_URL=redis://localhost:6379/0

# Payload CMS Configuration
PAYLOAD_SECRET=your-secret-key-here-change-in-production
PAYLOAD_SERVER_URL=http://localhost:3001
PAYLOAD_PORT=3001

# Admin User (created automatically if none exists)
PAYLOAD_ADMIN_EMAIL=admin@tempsdarret.com
PAYLOAD_ADMIN_PASSWORD=change-this-password

# Notification Service Configuration
NOTIFICATION_SERVICE_URL=http://localhost:3000
DEFAULT_FROM_EMAIL=noreply@tempsdarret.com
DEFAULT_FROM_NAME=Temps D'arrÃªt Photography
DEFAULT_REPLY_TO=contact@tempsdarret.com

# Email Provider (Resend.dev)
RESEND_API_KEY=your-resend-api-key-here

# Queue Configuration (BullMQ/Redis)
QUEUE_REDIS_URL=redis://localhost:6379/1

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-consumers

# Application Settings
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Template Settings
TEMPLATE_CACHE_SIZE=1000
MAX_RETRY_ATTEMPTS=3
NOTIFICATION_TIMEOUT=10000

# Security
JWT_SECRET=your-jwt-secret-here
WEBHOOK_SECRET=your-webhook-secret-here

# File Storage (if needed for template assets)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Performance Settings
MAX_CONCURRENT_SENDS=50
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100