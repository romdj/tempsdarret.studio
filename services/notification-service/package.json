{
  "name": "@tempsdarret/notification-service",
  "version": "0.1.0",
  "description": "Event-driven email notifications service with Resend.dev and Payload CMS",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "payload": "tsx src/payload/server.ts",
    "payload:dev": "tsx watch src/payload/server.ts",
    "test": "jest --selectProjects unit component",
    "test:watch": "jest --watch --selectProjects unit component",
    "test:unit": "jest --selectProjects unit",
    "test:component": "jest --selectProjects component", 
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "test:contract": "jest --selectProjects contract",
    "test:all": "jest --runInBand",
    "test:coverage": "jest --coverage --selectProjects unit component integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@tempsdarret/events": "workspace:*",
    "payload": "^2.24.0",
    "@payloadcms/bundler-webpack": "^1.0.0",
    "@payloadcms/richtext-slate": "^1.5.0",
    "@payloadcms/db-mongodb": "^1.5.0",
    "resend": "^3.2.0",
    "mongoose": "^8.0.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.0",
    "handlebars": "^4.7.0",
    "juice": "^10.0.0",
    "zod": "^3.22.0",
    "kafkajs": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/handlebars": "^4.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^9.1.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}