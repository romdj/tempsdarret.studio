{
  "name": "@tempsdarret/shoot-service",
  "version": "0.1.0",
  "description": "Photography shoot lifecycle management and client gallery service",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest", 
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose src",
    "test:component": "vitest run --reporter=verbose tests/component",
    "lint": "eslint src/**/*.{js,ts}",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^5.4.0",
    "mongoose": "^8.16.4",
    "zod": "^4.0.10",
    "@tempsdarret/shared": "*",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "mongodb-memory-server": "^9.1.0",
    "@testcontainers/mongodb": "^10.13.0",
    "@testcontainers/kafka": "^10.13.0",
    "testcontainers": "^10.13.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.12.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  }
}