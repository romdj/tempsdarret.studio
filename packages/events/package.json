{
  "name": "@tempsdarret/events",
  "version": "0.1.0",
  "description": "AsyncAPI event specifications and validation for photography platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "asyncapi generate fromTemplate asyncapi.yaml @asyncapi/nodejs-template -o dist",
    "validate": "asyncapi validate asyncapi.yaml",
    "docs": "asyncapi generate fromTemplate asyncapi.yaml @asyncapi/html-template -o ../../docs/events",
    "clean": "rm -rf dist ../../docs/events"
  },
  "dependencies": {
    "@asyncapi/parser": "^3.0.0"
  },
  "devDependencies": {
    "@asyncapi/cli": "^1.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}